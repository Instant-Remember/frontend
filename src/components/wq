<template>
    <div class="posts">
        <div class="post" v-for="post in posts" :key="post.id">

            <user class="userpost">
                <img src="/src/assets/img/avatar.svg" alt="">
                <div class="username">{{ getUserFirstName(post.owner_id) }} {{ getUserLastName(post.owner_id) }}</div>
            </user>

            <div class="mainpost">
                <div class="targetname">{{ getGoalName(post.goal_id) }}</div>
                <div class="description">{{ post.text }}</div>
            </div>

            <progressBar class="progres"></progressBar>

            <date>Неделю назад</date>
            <society>
                <button class="likes" @click="likePost(post.id)">
                    <img src="/src/assets/img/likes.svg" alt="">
                    <div class="like">{{ getLikesCount(post.id) }}</div>
                </button>
                <button class="comments_img"><img src="/src/assets/img/comments.svg" alt=""></button>
            </society>

            <div class="comments">
                <div class="comment">
                    <user class="usercomment">
                        <img src="/src/assets/img/avatar.svg" alt="" class="usercomment_img">
                        <div class="username_comment">Вася пупкин</div>
                    </user>
                    <div class="maincomment">Красаучик васссяяяя</div>
                </div>
                <div class="writecomment">
                    <input type="text">
                    <button class="send"><img src="/src/assets/img/send.svg" alt="Отправить"></button>
                </div>
                
            </div>
        </div>

    </div>
</template>

<script>
import progressBar from './progressBar.vue'
import axios from 'axios';
import { reactive, toRefs } from 'vue';

export default {
    components: { progressBar },
    props: {
        backendURL: String
    },
    setup() {
        const state = reactive({
            posts: [],
            users: {},
            goals: {},
            likes: {}
        });

        const getFeed = () => {
            const accessToken = localStorage.getItem('accessToken');

            axios.get(`http://158.160.80.94:8000/feed?count=5&offset=1`, {
                headers: {
                    'accept': 'application/json',
                    Authorization: `Bearer ${accessToken}`
                }
            })
                .then(response => {
                    state.posts = response.data;

                    state.posts.forEach(post => {
                        getUser(post.owner_id);
                        getGoal(post.goal_id);
                        getLikes(post.id);
                    });
                })
                .catch(error => {
                    console.error('Ошибка при получении данных:', error);
                });
        };

        const getUser = (userId) => {
            axios.get(`http://158.160.80.94:8000/profile/${userId}`, {
                headers: {
                    'accept': 'application/json'
                }
            })
                .then(response => {
                    state.users[userId] = response.data;
                })
                .catch(error => {
                    console.error('Ошибка при получении данных о пользователе:', error);
                });
        };

        const getGoal = (goalId) => {
            axios.get(`http://158.160.80.94:8000/goal/${goalId}`, {
                headers: {
                    'accept': 'application/json'
                }
            })
                .then(response => {
                    state.goals[goalId] = response.data;
                })
                .catch(error => {
                    console.error('Ошибка при получении данных о цели:', error);
                });
        };

        const getLikes = (postId) => {
            axios.get(`http://158.160.80.94:8000/post/${postId}/likes`, {
                headers: {
                    'accept': 'application/json'
                }
            })
                .then(response => {
                    state.likes[postId] = response.data;
                })
                .catch(error => {
                    console.error('Ошибка при получении данных о лайках поста:', error);
                });
        };

        const likePost = (postId) => {
            const accessToken = localStorage.getItem('accessToken');

            axios.get(`http://158.160.80.94:8000/post/${postId}/like`, {
                headers: {
                    'accept': 'application/json',
                    'Authorization': `Bearer ${accessToken}` // Добавляем заголовок с токеном доступа
                }
            })
                .then(response => {
                    // Обновляем количество лайков для данного поста
                    getLikes(postId);
                })
                .catch(error => {
                    console.error('Ошибка при отправке лайка:', error);
                });
        };


        const getUserFirstName = (userId) => {
            const user = state.users[userId];
            return user ? user.first_name : '';
        };

        const getUserLastName = (userId) => {
            const user = state.users[userId];
            return user ? user.last_name : '';
        };

        const getGoalName = (goalId) => {
            const goal = state.goals[goalId];
            return goal ? goal.name : '';
        };

        const getLikesCount = (postId) => {
            const likes = state.likes[postId];
            return likes ? likes.length : 0;
        };

        return {
            ...toRefs(state),
            getFeed,
            getUser,
            getGoal,
            getLikes,
            likePost,
            getUserFirstName,
            getUserLastName,
            getGoalName,
            getLikesCount
        };
    },
    mounted() {
        this.getFeed();
    }
};
</script>

